  "keywords": [
    "feature",
    "flag",
    "back",
    "end",
    "front",
    "end",
    "unifeatures"
  ],
  "author": "Nandhakumar Varadharajan",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.26.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}