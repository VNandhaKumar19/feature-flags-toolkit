{
  "name": "feature-flags-toolkit",
  "version": "1.0.1",
  "description": "Universal feature flag manager for frontend and backend apps",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VNandhaKumar19/feature-flags-toolkit"
  },
  "bugs": {
    "url": "https://github.com/VNandhaKumar19/feature-flags-toolkit/issues"
  },
  "homepage": "https://github.com/VNandhaKumar19/feature-flags-toolkit#readme",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint . --ext .ts",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "feature",
    "flag",
    "back",
    "end",
    "front",
    "end",
    "unifeatures"
  ],
  "author": "Nandhakumar Varadharajan",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.1.3",
    "c8": "^10.1.3",
    "eslint": "^9.26.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
