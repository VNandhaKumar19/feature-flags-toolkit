{
  "name": "unifeatures",
  "version": "1.0.0",
  "description": "Universal feature flag manager for frontend and backend apps",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
